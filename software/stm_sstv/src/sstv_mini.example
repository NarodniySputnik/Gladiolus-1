void setup()
{
    Serial.begin(9600);

    Serial.print(F("[SSTV] Initializing ... "));
    int16_t state = sstv_init(&sstv,
                              &SSTV_MODE_ROBOT_72,
                              my_tone,
                              my_no_tone,
                              my_delay_us,
                              my_micros);

    if (state == SSTV_ERR_NONE) {
        Serial.println(F("success!"));
    } else {
        Serial.print(F("failed, code "));
        Serial.println(state);
        while (true) { delay(10); }
    }

    Serial.print(F("[SSTV] Setting correction ... "));
    state = sstv_set_correction(&sstv, 0.88f);
    if (state == SSTV_ERR_NONE) {
        Serial.println(F("success!"));
    } else {
        Serial.print(F("failed, code "));
        Serial.println(state);
        while (true) { delay(10); }
    }

    /* To help tune the receiver, send continuous 1900 Hz beep: */
    /*
    sstv_idle(&sstv);
    while (true) { delay(10); }
    */
}

void loop()
{
    Serial.print(F("[SSTV] Sending test picture ... "));

    sstv_send_header(&sstv);

    for (uint16_t i = 0; i < sstv_get_picture_height(&sstv); i++) {
        sstv_send_line(&sstv, line);
    }

    sstv_no_tone(&sstv);

    Serial.println(F("done!"));

    delay(3000);
}
