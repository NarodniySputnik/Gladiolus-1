#include <Arduino.h>

#define SSTV_MINI_IMPLEMENTATION
#include "sstv_mini.h"

/* Pin for tone output */
#define TONE_PIN PB10

/* SSTV context */
static sstv_ctx_t sstv;

/* Callback implementations */
static void my_tone(uint16_t freq)
{
    tone(TONE_PIN, freq);
}

static void my_no_tone(void)
{
    noTone(TONE_PIN);
}

static void my_delay_us(uint32_t us)
{
    delayMicroseconds(us);
}

static uint32_t my_micros(void)
{
    return micros();
}

